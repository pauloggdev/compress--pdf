{
  "compilerOptions": {
    "target": "ES5",                   // Alvo da compilação
    "module": "commonjs",               // Sistema de módulos
    "outDir": "./dist",                 // Diretório de saída
    "rootDir": "./src",                 // Diretório de origem
    "strict": true,                     // Ativa todas as verificações de tipo estrito
    "esModuleInterop": true,            // Habilita interoperabilidade com módulos ES
    "skipLibCheck": true,               // Pula verificação de arquivos de definição
    "forceConsistentCasingInFileNames": true // Garante consistência de case nos nomes dos arquivos
  },
  "include": ["src/**/*"],              // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"]           // Exclui node_modules
}
